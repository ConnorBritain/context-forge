# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Database - for Docker setup
MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/context-generator?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme

# JWT Authentication
JWT_SECRET=your-secure-jwt-secret-for-production
JWT_EXPIRES_IN=7d

# AI Providers
AI_PROVIDER=anthropic  # Options: anthropic, openai
USE_REAL_AI=true

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Client Configuration
REACT_APP_API_URL=/api
SERVER_URL=https://api.contextgenerator.com
CLIENT_URL=https://contextgenerator.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info