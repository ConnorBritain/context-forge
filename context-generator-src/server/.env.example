# Server configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Firebase Admin SDK configuration
FIREBASE_PROJECT_ID=contextforge
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
FIREBASE_DATABASE_URL=https://contextforge.firebaseio.com

# Enable Firebase Auth checking (even in development)
FIREBASE_AUTH_REQUIRED=false

# API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# AI Service Configuration
AI_SERVICE=mock # Use 'openai', 'anthropic', or 'mock'
AI_MODEL=claude-3-opus-20240229 # For Anthropic, or 'gpt-4-turbo' for OpenAI