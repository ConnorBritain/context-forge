# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Database (for Docker setup)
MONGODB_URI=mongodb://context_user:context_password@mongodb:27017/context-generator?authSource=admin
MONGO_INITDB_ROOT_USERNAME=context_user
MONGO_INITDB_ROOT_PASSWORD=context_password

# JWT Authentication
JWT_SECRET=context-generator-secret-key-for-testing

# AI Providers
AI_PROVIDER=anthropic  # Options: anthropic, openai, mock
USE_REAL_AI=true  # Set to true to use real AI API

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Client Configuration
SERVER_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000